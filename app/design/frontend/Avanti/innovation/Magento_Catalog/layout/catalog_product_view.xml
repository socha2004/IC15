<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Catalog::product/view/details-columns.phtml</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View" name="product.share" template="Magento_Catalog::product/view/share.phtml" before="avanti.shipping.estimator"/>
        </referenceContainer>
    </body>
</page>
