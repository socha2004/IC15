/** @var $block  Result*/
$productList = $block->getProductListHtml();
?>
<?php if ($block->getResultCount()) : ?>
    <?= /* @noEscape */ $block->getChildHtml('tagged_product_list_rss_link') ?>
<div class="search results">
    <?php if ($messages = $block->getNoteMessages()) : ?>
    <div class="message notice">
        <div>
            <?php foreach ($messages as $message) : ?>
                <?= /* @noEscape */ $message ?><br />
            <?php endforeach; ?>
        </div>
    </div>
    <?php endif; ?>
    <?= /* @noEscape */ $productList ?>
</div>
<?php else : ?>

<div class="sem-resultado">
    <div>
        <span>
            <?=__("We can't find results for") ?>
        </span>
        <span>
            "<?= $searchQuery ?>"
        </span>
        <div class="oque-fazer">
            <span><?=__("What should I do") ?></span>
            <ul>
                <li>- Verifique os termos digitados.</li>
                <li>- Utilize sinônimos ao termo desejado.</li>
                <li>- Tente utilizar uma única palavra</li>
                <li>- Utilize termos genéricos na busca</li>
            </ul>
        </div>
    </div>
</div>
<?php endif; ?>
